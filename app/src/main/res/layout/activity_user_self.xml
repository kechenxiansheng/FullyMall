<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightBlue8"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".view.activity.UserSelfActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_userself_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/colorLightBlue11"
            android:gravity="center"
            android:layout_marginStart="10dp"

            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:textColor="@color/colorBlack"
            android:text="返回" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:text="个人中心" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/colorLightBlue3"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="账号："
            />
        <!-- focusableInTouchMode false 让其不可编辑 -->
        <EditText
            android:id="@+id/et_userself_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:focusable="false"
            android:padding="10dp"
            android:background="@null"
            android:layout_gravity="center"
            android:text="chenming"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="昵称："
            />
        <!-- focusableInTouchMode false 让其不可编辑 -->
        <EditText
            android:id="@+id/et_userself_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:background="@null"
            android:text="不愧是我"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="性别："
            />
        <RadioGroup
            android:id="@+id/rg_userself_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rb_userself_sex_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="男"
                />
            <RadioButton
                android:id="@+id/rb_userself_sex_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="女"
                />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="电话："
            />
        <!-- focusableInTouchMode false 让其不可编辑 -->
        <TextView
            android:id="@+id/tv_userself_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:text=""
            android:hint="点击右侧按钮绑定手机"
            />
        <TextView
            android:id="@+id/tv_bind_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorLightBlue11"
            android:textColor="@color/colorBlack"
            android:padding="5dp"
            android:text="绑定"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/colorLightBlue3"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_userself_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:textColor="#000"
            android:background="@color/colorLightBlue11"
            android:textSize="18sp"
            android:text="修改信息"
            />
        <!-- focusableInTouchMode false 让其不可编辑 -->
        <TextView
            android:id="@+id/tv_userself_sure_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/colorLightBlue11"
            android:visibility="gone"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="确认修改"
            />
    </LinearLayout>
</LinearLayout>