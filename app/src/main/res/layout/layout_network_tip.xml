<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/check_update_father_bg"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/check_update_title_bg"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="提示"
        />
    <!--  android:scrollbars="vertical"  告知内容过多时可以垂直滑动 -->
    <TextView
        android:id="@+id/tv_mobile_network"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textSize="18sp"
        android:gravity="center"
        android:text="非wifi网路环境，是否继续更新？"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="5dp"
            android:background="@drawable/check_update_button_bg"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="取消"
            />

        <TextView
            android:id="@+id/tv_sure_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/check_update_button_bg"
            android:padding="5dp"
            android:text="继续"
            />


    </LinearLayout>

</LinearLayout>